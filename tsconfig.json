{
  "compilerOptions": {
    "target": "ES6",              // Target modern JavaScript
    "module": "commonjs",         // Use CommonJS module system for Node.js
    "strict": true,               // Enable strict type-checking options
    "esModuleInterop": true,      // Allow default imports from CommonJS modules
    "skipLibCheck": true,         // Skip type checking of declaration files
    "outDir": "./dist",           // Output compiled JS files into the dist/ folder
    "rootDir": "./src",           // Set root directory for TypeScript files
    "resolveJsonModule": true     // Allow importing JSON modules
  },
  "include": [
    "src/**/*.ts"                 // Include all .ts files in the src directory
  ],
  "exclude": [
    "node_modules"                // Exclude node_modules folder
  ]
}
